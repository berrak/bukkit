#
# Project: <%= projectname %> 
# 
# HTML Makefile
#

QUIET = @

CP = /bin/cp
ECHO = /bin/echo
CHOWN = /bin/chown

# the -f option suppress return status and prevents make to emit error
ERASE = /bin/rm -f

all: \
	dist

dist:
	$(QUIET) $(ECHO) [makefile]: Copy files to build directory
	$(QUIET) $(CP) *.html ../<%= builddirectory %>/.
	$(QUIET) $(ECHO) [makefile]: Change ownership of HTML files 
	$(QUIET) $(CHOWN) <%= username %>:<%= groupname %> ../<%= builddirectory %>/*.html

install:
	$(QUIET) $(ECHO) [makefile]: Install files to target directory <%= htmlinstallpath %>
	$(QUIET) $(CP) ../<%= builddirectory %>/*.html <%= htmlinstallpath %>/.
	$(QUIET) $(ECHO) [makefile]: Change ownership of HTML files in <%= htmlinstallpath %>
	$(QUIET) $(CHOWN) <%= username %>:<%= groupname %> <%= htmlinstallpath %>/*.html

clean: \
	cleanall

cleanall:
	$(QUIET)$(ECHO) [makefile]: Remove any html files in build directory
	$(QUIET) $(ERASE) ../<%= builddirectory %>/*.html

.PHONY: all dist install clean cleanall
